---
import Layout from "@/layouts/Layout.astro";
import { allPlaylists, songs } from "@/lib/data";

const { id } = Astro.params;
const playlist = allPlaylists.find((playlist) => playlist.id === id);
---

<Layout title="Spotify clone">
  <div
    id="playlist-container"
    class="relative flex flex-col overflow-x-hidden h-full"
    transition:name=`playlist ${id} box`>
    <!-- PageHeader -->
    <header class="flex flex-row gap-8 px-6 mt-12">
      <picture class="aspect-square w-52 h-52 h-auto flex-none">
        <img
          src={playlist?.cover}
          alt=`Cover of ${playlist?.title}`
          class="w-full h-full object-cover shadow-lg"
          transition:name=`playlist ${id} image`
        />
      </picture>

      <div class="flex flex-col justify-between mt-5">
        <h2>Playlist</h2>
        <div>
          <h1 class="title-clamp font-bold block text-white text-6xl">
            {playlist?.title}
            <span transition:name=`playlist ${playlist?.id} title`></span>
          </h1>
        </div>

        <div class="flex-1 flex flex-col item-end mt-5">
          <div class="text-sm text-gray300 font-normal">
            <div transition:name=`playlist ${id} artists`>
              <span>{playlist?.artists.join(", ")}</span>
            </div>
          </div>
          <p class="">
            <span>50 canciones</span>, 3 h aproximadamente
          </p>
        </div>
      </div>
    </header>
    <div
      class="absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-900/80 -z-10">
    </div>
  </div>
</Layout>
